  def name_caller(array, input)
    array.each do |element|
      case input
      when element[:name]
      puts "#{element[:name]} nickname is #{element[:nickname]}"
    # else
    #   puts "Player not in database! Please try another player"
      end
    end

  end
puts "Welcome to the NBA player nickname generator!"
puts "Choose from one of the following players: Chris Paul, Matt Boner, Paul George, Kyrie Irving, DeMarcus Cousins, Nick Young, Anthony Davis, Doug McDermott, Kenneth Faried, Robin Lopez."
puts "Directions: Type in a players first and last name:"

user_input = gets.rstrip.chomp #downcase so capitals dont matter

name_caller(nick_names, user_input)



